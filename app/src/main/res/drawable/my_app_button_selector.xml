<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/darkred" />
            <gradient android:angle="-90" android:startColor="@color/darkred" android:endColor="@color/darkred"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <padding android:bottom="@dimen/button_padding_top_bottom"/>
            <padding android:top="@dimen/button_padding_top_bottom"/>
            <padding android:left="@dimen/button_padding_left_right"/>
            <padding android:right="@dimen/button_padding_left_right"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/red" />
            <gradient android:angle="-90" android:startColor="@color/red" android:endColor="@color/red" />
        </shape>
    </item>
</selector>